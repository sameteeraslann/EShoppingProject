@model IEnumerable<ProductVMs>

@{ ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="row mt-2">
    <div class="col-sm-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">List of Product</div>
                @*<a asp-controller="Category" asp-action="PassiveToCategory" class="btn btn-primary ml-5">Show Passive Categories</a>*@

            </div>
            <div class="card-body">
                <form>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <td>Id No</td>
                                <th>Adı</th>
                                <th>Kategorisi</th>
                                <th>Alt Kategorisi</th>
                                <td>Resim</td>
                                <th>Description</th>
                                <th>UnitPrice</th>
                                <th>Sil</th>
                                <th>Ürün Detayı</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                  @foreach (var item in Model)
                                  {
                                     <tr>
                                         <td>@item.Id</td>
                                         <td>@item.ProductName</td>
                                         <td>@item.CategoryName</td>
                                         <td>@item.SubCategoryName</td>
                                         <td><img src="~/images/product/@item.ImagePath" width="100" /></td>
                                         <td>@item.Description</td>
                                         <td>@item.UnitPrice.ToString("C2")</td>
                                         <td>
                                             <a asp-controller="Product" asp-action="Delete" asp-route-id="@(item.Id)" class="btn btn-danger">Sil</a>
                                         </td>
                                     
                                         <td>
                                             <a asp-controller="Product" asp-action="Details" asp-route-id="@(item.Id)" class="btn btn-info">Ürün Detayı</a>
                                         </td>
                                     
                                     </tr>
                                     }
                            }
                                     
                        </tbody>
                    </table>
                </form>
            </div>
        </div>
    </div>
</div>

