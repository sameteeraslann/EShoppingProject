@model IEnumerable<ProductVMs>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

        <div class="col-sm-4">
            <div class="card" style="width: 18rem;">
        
                <div class="card-header">
                    <img src="~/images/product/@item.ImagePath" alt="Not Found Image" style="width:150px" class="card-img-top" />
                </div>
                <div class="card-body">
                    <p class="card-title">@item.ProductName</p>
                    <p class="card-text">@item.Description</p>
                    <p class="card-text"> @item.UnitPrice.ToString("C2")</p>
                    <a asp-area="" asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">Ürün Detayı</a>
                </div>
                <div class="card-footer">
        
                </div>
            </div>
        
        </div>          
        }

    </div>
</div>
